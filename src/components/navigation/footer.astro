---
import { footer } from '../../../data/navigation.json';
import Icon from '../utility/icon';
---

<footer
  style={`background-color: ${footer.background_color}; color: ${footer.color};`}>
  <div class="footer grid grid-cols-3 items-end px-8 py-[48px]">
    <p>&#169; {new Date().getFullYear()} {footer.copyright}</p>
    <div class="flex flex-col gap-8 items-center">
      <a href={footer.logo_url}>
        <img
          class="footer__logo-image wiggle"
          src={footer.logo}
          alt="Body of the Year Logo"
        />
      </a>
      <ul class="flex gap-4 items-center">
        {
          footer.social.map((link) => {
            return (
              <li class="w-[2rem]">
                <a href={link.link}>
                  <Icon icon={link.social_icon} />
                </a>
              </li>
            );
          })
        }
      </ul>
    </div>
    <ul class="flex flex-col items-end gap-4">
      {
        footer.links.map((link) => {
          return (
            <li>
              <a href={link.link}>{link.text}</a>
            </li>
          );
        })
      }
    </ul>
  </div>
</footer>

<style>
  .footer {
    max-width: var(--largeContainer);
    display: grid;
    margin: 0 auto;
  }
  .footer__logo-image {
    display: block;
    width: 64px;
  }
</style>
