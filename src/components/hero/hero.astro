---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  imagePath: string;
  altText: string;
  name: string;
  age: number;
}

const block = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/*.{jpeg,jpg,png,gif}', { eager: true }
);

let src
if (typeof images[block.imagePath]?.default === 'string') {
  src = images[block.imagePath].default.replace(/^\./,'/_cloudcannon');
} else {
  if(!ENV_BOOKSHOP_LIVE && !images[block.imagePath]){
    throw new Error(
      `"${block.imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`
    );
  } else if(!images[block.imagePath]){
    console.log('no image found');
    src = block.imagePath;
  } else {
    src = images[block.imagePath].default;
  }

}
---

<div class="card">
  <h2>{block.name}</h2>
  <p>Age: {block.age}</p>
  <Image src={src} alt={block.altText} />
</div>
