---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  imagePath: string;
  altText: string;
  name: string;
  age: number;
}

const block = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/*.{jpeg,jpg,png,gif}', { eager: true }
);

console.log({imagePath:block.imagePath, images:images, default: images[block.imagePath].default })
let {src, width, height} = images[block.imagePath].default;

if(ENV_BOOKSHOP_LIVE){
  if(src){
    src = src.replace(/^\./,'/_cloudcannon');
  }
} else {
  if (!src)
    throw new Error(
      `"${block.imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`
    );
}
---

<div class="card">
  <h2>{block.name}</h2>
  <p>Age: {block.age}</p>
  <Image src={src} alt={block.altText} width={width} height={height} />
</div>
