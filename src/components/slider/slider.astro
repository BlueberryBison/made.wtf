---
const block = Astro.props;
---

<swiper-container slides-per-view={block.number} loop="true">
  {
    block.slides.map((slide: any) => {
      return (
        <swiper-slide>
          {slide.text}
          <img src={slide.image} />
        </swiper-slide>
      );
    })
  }
</swiper-container>
